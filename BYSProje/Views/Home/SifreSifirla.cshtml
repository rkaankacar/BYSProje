@model Login;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifre Sıfırlama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }

        .reset-container {
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            width: 100%;
            max-width: 400px;
        }

        .theme-student {
            border-top: 4px solid #007bff;
        }

        .theme-instructor {
            border-top: 4px solid #dc3545;
        }

        .hidden {
            display: none;
        }
    </style>
</head>

<body>
    <div class="reset-container">
        <h3 class="text-center mb-4">Şifre Sıfırlama</h3>
        <div class="mb-3">
            <label for="userType" class="form-label">Kullanıcı Tipi</label>
            <select id="userType" class="form-select" onchange="toggleResetForm()">
                <option value="student" selected>Öğrenci</option>
                <option value="instructor">Akademisyen</option>
            </select>
        </div>

        <!-- Öğrenci Şifre Sıfırlama Formu -->
        <form id="1" method="post" class="theme-student" asp-controller="Home" asp-action="SifreSifirla">
            <div class="mb-3">
                <label asp-for="UserNo" class="form-label">Öğrenci Numarası</label>
                <input asp-for="UserNo" class="form-control" placeholder="Öğrenci numaranızı girin" required>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Yeni Şifre</label>
                <input asp-for="Password" class="form-control" placeholder="Yeni şifrenizi girin" type="password" required>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Yeni Şifre Tekrarı</label>
                <input asp-for="Password" class="form-control" placeholder="Yeni şifrenizi tekrar girin" type="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Şifreyi Sıfırla</button>
        </form>

        <!-- Akademisyen Şifre Sıfırlama Formu -->
        <form id="2" method="post" class="theme-instructor hidden" asp-controller="Home" asp-action="SifreSifirla">
            <div class="mb-3">
                <label asp-for="UserNo" class="form-label">Akademisyen Numarası</label>
                <input asp-for="UserNo" class="form-control" placeholder="Akademisyen numaranızı girin" required>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Yeni Şifre</label>
                <input asp-for="Password" class="form-control" placeholder="Yeni şifrenizi girin" type="password" required>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Yeni Şifre Tekrarı</label>
                <input asp-for="Password" class="form-control" placeholder="Yeni şifrenizi tekrar girin" type="password" required>
            </div>
            <button type="submit" class="btn btn-danger w-100">Şifreyi Sıfırla</button>
        </form>
    </div>

    <script>
        function toggleResetForm() {
            const userType = document.getElementById("userType").value;
            const resetStudentForm = document.getElementById("1");
            const resetInstructorForm = document.getElementById("2");

            if (userType === "student") {
                resetStudentForm.classList.remove("hidden");
                resetInstructorForm.classList.add("hidden");
            } else {
                resetStudentForm.classList.add("hidden");
                resetInstructorForm.classList.remove("hidden");
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
