

@{
    ViewData["Title"] = "Ders Atama";
}

<h1>@Model.First_Name @Model.Last_Name'in Seçtiği Dersler</h1>

<form method="post" asp-action="Onayla" asp-route-studentId="@Model.StudentID">
    <div>
        <h3>Seçilen Dersler</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ders Adı</th>
                    <th>İşlem</th>
                    <th>Onay Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td>@course.CourseName</td>
                        <td>
                            <input type="checkbox" name="courseIds" value="@course.CourseID" @(course.IsApproved ? "checked" : "") />
                        </td>
                        <td>@(course.IsApproved ? "Onaylı" : "Onaysız")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Dersleri Onayla</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
