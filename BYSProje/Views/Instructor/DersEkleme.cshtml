@{
    Layout ="_AkademisyenSayfa";
}
@model CourseViewModel
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ders Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="content">
        <h2>Ders Ekle</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-controller="Instructor" asp-action="DersEkleme" asp-route-id="@Model?.InstructorID" novalidate>
              <div class="mb-3">
                <label asp-for="InstructorID" class="form-label">Akademisyen No</label>
                <input type="text" class="form-control" asp-for="InstructorID" readonly>
                <span asp-validation-for="InstructorID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CourseName" class="form-label">Ders Adı</label>
                <input type="text" class="form-control" asp-for="CourseName" placeholder="Ders adını girin">
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Credits" class="form-label">Kredi</label>
                <input type="number" class="form-control" asp-for="Credits" placeholder="Ders kredisini girin">
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Explanation" class="form-label">Açıklama</label>
                <textarea class="form-control" asp-for="Explanation" rows="4" placeholder="Dersin açıklamasını girin"></textarea>
                <span asp-validation-for="Explanation" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger">Dersi Kaydet</button>
        </form>
    </div>
</body>

</html>
