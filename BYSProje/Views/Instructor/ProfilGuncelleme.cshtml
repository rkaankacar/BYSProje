@{
  Layout="_AkademisyenSayfa";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Güncelleme</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="content">
        <h2>Profil Güncelleme</h2>
 <form method="post" asp-action="ProfilGuncelle" asp-route-id="@Model.StudentID">
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" placeholder="Email adresinizi girin">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Şifre:</label>
        <input type="password" class="form-control" id="password" name="Password" value="@Model.Password" placeholder="Yeni şifrenizi girin">
    </div>
    <button type="submit" class="btn btn-danger">Güncelle</button>
</form>
    </div>
</body>

</html>
