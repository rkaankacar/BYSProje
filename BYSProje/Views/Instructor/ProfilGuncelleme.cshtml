@{
  Layout = "_AkademisyenSayfa";
}
@model InstructorsViewModel
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Güncelleme</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="content">
        <h2>Profil Güncelleme</h2>
        <form method="post" asp-action="ProfilGuncelle" asp-route-id="@Model.InstructorID">
            <div class="mb-3">
                <label for="email" class="form-label">E-posta:</label>
                <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" placeholder="E-posta adresinizi girin" required>
                @if (!string.IsNullOrEmpty(ViewData["EmailError"] as string))
                {
                    <div class="text-danger">@ViewData["EmailError"]</div>
                }
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre:</label>
                <input type="password" class="form-control" id="password" name="Password" value="@Model.Password" placeholder="Yeni şifrenizi girin" required>
                @if (!string.IsNullOrEmpty(ViewData["PasswordError"] as string))
                {
                    <div class="text-danger">@ViewData["PasswordError"]</div>
                }
            </div>
            <button type="submit" class="btn btn-danger">Güncelle</button>
        </form>
    </div>
</body>

</html>
