@model List<CourseViewModel>

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dersleri Görüntüleme</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="content">
        <h2>Dersleri Görüntüleme</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ders Kodu</th>
                    <th>Ders Adı</th>
                    <th>Kredi</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
              @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseID</td>
                        <td>@course.CourseName</td>
                        <td>@course.Credits</td>
                        <td><a asp-controller="Student" asp-action="DersDetay" asp-route-courseId="@course.CourseID" class="btn btn-primary btn-sm">Detay</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
      
            
    </script>
</body>

</html>
