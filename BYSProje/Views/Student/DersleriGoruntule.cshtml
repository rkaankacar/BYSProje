<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dersleri Görüntüleme</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="content">
        <h2>Dersleri Görüntüleme</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ders Kodu</th>
                    <th>Ders Adı</th>
                    <th>Kredi</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody id="ders-list">
                <!-- Dinamik ders listesi buraya eklenecek -->
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            // Seçilen derslerin listesi
            var selectedCourses = [
                { code: "CS101", name: "Bilgisayar Programlama", credit: 4 },
                { code: "BIO202", name: "Evrimsel Biyoloji", credit: 3 }
            ];

            // Seçilen dersleri tabloya ekle
            selectedCourses.forEach(function(course) {
                $("#ders-list").append(`
                    <tr>
                        <td>${course.code}</td>
                        <td>${course.name}</td>
                        <td>${course.credit}</td>
                        <td><a href="ders-detayi.html?code=${course.code}" class="btn btn-primary btn-sm">Detay</a></td>
                    </tr>
                `);
            });
        });
    </script>
</body>

</html>
